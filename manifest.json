{
  "name": "Rietveld Beautifier",
  "version": "0.1.7",
  "manifest_version" : 2,
  "description": "This is a description",
  "permissions": [
    "tabs",
    "storage"
  ],
  "background" : {
    "page" : "background.html"
  },
  "page_action" :
  {
    "default_icon": {
      "19": "icons/19.png",
      "38": "icons/38.png"
    },
    "default_title" : "Rietveld Beautifier",
    "default_popup" : "settings/popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://codereview.appspot.com/*",
        "*://chromiumcodereview.appspot.com/*",
        "*://chromereviews.googleplex.com/*",
        "*://codereview.chromium.org/*"
      ],
      "all_frames": true,
      "js": [
        "lib/jquery-1.8.3.min.js",
        "scripts/lib.js",
        "scripts/settings.js",
        "scripts/storage.js",
        "scripts/identify.js"
      ],
      "run_at": "document_start"
    },
    {
      "matches": [
        "*://chromiumcodereview.appspot.com/*",
        "*://codereview.appspot.com/*",
        "*://codereview.chromium.org/*",
        "*://chromereviews.googleplex.com/*"
      ],
      "all_frames": true,
      "js": [
        "scripts/loadQueue.js",
        "scripts/controls.js",
        "scripts/help.js",
        "scripts/main.js"
      ],
      "css": [
        "css/main.css",
        "css/spinner.css"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "*://chromiumcodereview.appspot.com/*/diff*",
        "*://codereview.appspot.com/*/diff*",
        "*://codereview.chromium.org/*/diff*",
        "*://chromereviews.googleplex.com/*/diff*"
      ],
      "all_frames": true,
      "js": [
        "scripts/diff_begin.js"
      ],
      "css": ["css/style.css"],
      "run_at": "document_start"
    },
    {
      "matches": [
        "*://chromiumcodereview.appspot.com/*/diff*",
        "*://codereview.appspot.com/*/diff*",
        "*://codereview.chromium.org/*/diff*",
        "*://chromereviews.googleplex.com/*/diff*"
      ],
      "all_frames": true,
      "js": [
        "scripts/diff_idle.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "options_page" : "settings/settings.html",
  "web_accessible_resources" : [
    "scripts/inject/inline_frame.js",
    "scripts/inject/patch.js",
    "scripts/lib.js"
  ]
}
